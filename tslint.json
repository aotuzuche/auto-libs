{
  "extends": ["tslint-config-alloy"],
  "linterOptions": {
    "exclude": ["**/node_modules/**"]
  },
  "rules": {
    "semicolon": [true, "always"],
    "trailing-comma": [true, "always"],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "arrow-parens": false,
    "no-magic-numbers": false,
    "cyclomatic-complexity": [true, 50]
  }
}
